{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Creates AWS Cognito resources.",
  "Transform" : ["ProjectLambdaMacro"],
  "Parameters": {
    "Environment": {
      "Description": "The environment (dev, testing, prod, etc.) to deploy to.",
      "Type": "String"
    },
    "UserPoolName": {
      "Description": "Name of the Cognito user pool",
      "MinLength": "1",
      "MaxLength": "20",
      "AllowedPattern": "[a-z]*",
      "Type": "String"
    },
    "UserPoolClientName": {
      "Description": "Name of the Cognito user pool client",
      "MinLength": "1",
      "MaxLength": "20",
      "AllowedPattern": "[a-z]*",
      "Type": "String"
    },
    "Version": {
      "Description": "The version related to this Cognito deployment, if required.",
      "Type": "String"
    }
  },
  "Resources": {
    "AppClient": {
      "Type" : "AWS::Cognito::UserPoolClient",
      "Properties" : {
        "ClientName" : {"Ref": "UserPoolClientName"},
        "GenerateSecret" : true,
        "RefreshTokenValidity" : 1,
        "UserPoolId" : {"Ref": "UserPool"}
      }
    },
    "UserPool": {
      "Type" : "AWS::Cognito::UserPool",
      "Properties" : {
        "MfaConfiguration" : "OFF",
        "Policies" : {
          "PasswordPolicy": {
              "MinimumLength": 8,
              "RequireUppercase": true,
              "RequireLowercase": true,
              "RequireNumbers": true,
              "RequireSymbols": true
          }
        },
        "Schema" : [
          {
              "Name": "sub",
              "AttributeDataType": "String",
              "DeveloperOnlyAttribute": false,
              "Mutable": false,
              "Required": true,
              "StringAttributeConstraints": {
                  "MinLength": "1",
                  "MaxLength": "2048"
              }
          },
          {
            "Name": "email",
            "AttributeDataType": "String",
            "DeveloperOnlyAttribute": false,
            "Mutable": true,
            "Required": true,
            "StringAttributeConstraints": {
                "MinLength": "0",
                "MaxLength": "2048"
            }
          }
        ],
        "UserPoolName" : {"Fn::Join": ["-", [
          {"Ref": "UserPoolName"},
          {"Ref": "Environment"}
        ]]}
      }
    }
  },
  "Outputs": {
    "AppClientId": {
      "Export": {
        "Name": {
          "Fn::Join": ["-", [
            "PHX_MACRO_PROJECT_NAME",
            "cognito",
            {"Ref": "Environment"},
            "AppClientId"
          ]]
        }
      },
      "Value": {"Ref": "AppClient"}
    },
    "UserPoolId": {
      "Export": {
        "Name": {
          "Fn::Join": ["-", [
            "PHX_MACRO_PROJECT_NAME",
            "cognito",
            {"Ref": "Environment"},
            "UserPoolId"
          ]]
        }
      },
      "Value": {"Ref": "UserPool"}
    },
    "UserPoolProviderName": {
      "Export": {
        "Name": {
          "Fn::Join": ["-", [
            "PHX_MACRO_PROJECT_NAME",
            "cognito",
            {"Ref": "Environment"},
            "UserPoolProviderName"
          ]]
        }
      },
      "Value": {
        "Fn::GetAtt": ["UserPool", "ProviderName"]
      }
    },
    "UserPoolProviderURL": {
      "Export": {
        "Name": {
          "Fn::Join": ["-", [
            "PHX_MACRO_PROJECT_NAME",
            "cognito",
            {"Ref": "Environment"},
            "UserPoolProviderURL"
          ]]
        }
      },
      "Value": {
        "Fn::GetAtt": ["UserPool", "ProviderURL"]
      }
    },
    "UserPoolArn": {
      "Export": {
        "Name": {
          "Fn::Join": ["-", [
            "PHX_MACRO_PROJECT_NAME",
            "cognito",
            {"Ref": "Environment"},
            "UserPoolArn"
          ]]
        }
      },
      "Value": {
        "Fn::GetAtt": ["UserPool", "Arn"]
      }
    }
  }
}
