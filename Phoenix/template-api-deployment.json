{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Deploys an API (RESTful or not)",
  "Transform" : ["__PROJECT_NAME__LambdaMacro"],
  "Parameters": {
    "Environment": {
      "Description": "The environment (dev, testing, prod, etc.) to deploy to.",
      "Type": "String"
    },
    "Port": {
      "Description": "The TCP Port that the VPC Proxy will send requests to. Use 443 for HTTPS.",
      "Type": "String",
      "Default": "80"
    },
    "Version": {
      "Description": "The identifier/version within the S3Key where the version of Lambda code intented to be deployed in this CloudFormation stack can be found (s3://bucket/{identifier}/foo/foo.py). In non-dev environments, this identifier may be v_{first 7 chars of git SHA1}. In dev, this may be a timestamp. If nothing else, changes in this parameter value will update the stack.",
      "Type": "String"
    }
  },
  "Resources": {
    "LambdaAPIInternals": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Handler": "lambda_function.lambda_handler",
        "Role": {"PhoenixSSM": "/microservice/{ProjectName}/global/iam-role"},
        "Code": {
          "S3Bucket" : {"PhoenixSSM": "/microservice/{ProjectName}/global/lambda-bucket-name"},
          "S3Key": {
            "Fn::Join": ["/", [
              {"Ref": "Version"},
              "api_internals",
              "lambda_function.zip"
            ]]
          }
        },
        "Runtime": "python3.6",
        "Timeout": "25"
      }
    },
    "CustomResourceAPIInternals": {
      "Type": "Custom::APIInternals",
      "DependsOn": "LambdaAPIInternals",
      "Properties": {
        "ServiceToken": {
          "Fn::GetAtt": ["LambdaAPIInternals", "Arn"]
        },
        "LambdaVersion": {"Ref": "Version"},
        "Hostname": {
          "Fn::ImportValue": {
            "Fn::Join": ["-", [
              {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
              "ecs-main",
              {"Ref": "Environment"},
              "ServiceHostname"
            ]]
          }
        },
        "Port": {"Ref": "Port"},
        "RestApiId": {
          "Fn::ImportValue": {
            "Fn::Join": ["-", [
              {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
              "api",
              {"Ref": "Environment"},
              "RestApiId"
            ]]
          }
        }
      }
    },
    "v0DocumentationVersion": {
      "Type": "AWS::ApiGateway::DocumentationVersion",
      "DependsOn": ["CustomResourceAPIInternals"],
      "Properties": {
        "Description": "v0 API",
        "DocumentationVersion": "v0",
        "RestApiId": {
          "Fn::ImportValue": {
            "Fn::Join": [
              "-",
              [
                {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
                "api",
                {"Ref": "Environment"},
                "RestApiId"
              ]
            ]
          }
        }
      }
    },
    "v0DeploymentStage": {
        "Type": "AWS::ApiGateway::Stage",
        "DependsOn": ["CustomResourceAPIInternals", "v0Deployment", "v0DocumentationVersion"],
        "Properties": {
            "StageName": "v0",
            "Description": {
              "Fn::Join": [" ", [
                {"Ref": "Environment"},
                "Stage"
              ]]
            },
            "RestApiId": {
              "Fn::ImportValue": {
                "Fn::Join": [
                  "-",
                  [
                    {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
                    "api",
                    {"Ref": "Environment"},
                    "RestApiId"
                  ]
                ]
              }
            },
            "DocumentationVersion": "v0",
            "DeploymentId": {
                "Ref": "v0Deployment"
            }
        }
    },
    "v0Deployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "DependsOn": ["CustomResourceAPIInternals"],
      "Properties": {
        "RestApiId": {
          "Fn::ImportValue": {
            "Fn::Join": [
              "-",
              [
                {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
                "api",
                {"Ref": "Environment"},
                "RestApiId"
              ]
            ]
          }
        },
        "Description": {"Fn::Join": [" ", [
          "v0",
          "Deployment"
        ]]}
      }
    },
    "v0BasePathMapping": {
      "Type" : "AWS::ApiGateway::BasePathMapping",
      "DependsOn": ["CustomResourceAPIInternals"],
      "Properties" : {
        "BasePath" : "v0",
        "DomainName" : {
          "Fn::ImportValue": {
            "Fn::Join": ["-", [
              {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
              "api-custom-domain",
              {"Ref": "Environment"},
              "CustomDomain"
            ]]
          }
        },
        "RestApiId" : {
          "Fn::ImportValue": {
            "Fn::Join": [
              "-",
              [
                {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
                "api",
                {"Ref": "Environment"},
                "RestApiId"
              ]
            ]
          }
        },
        "Stage" : {"Ref": "v0DeploymentStage"}
      }
    },
    "v1DeploymentStage": {
        "Type": "AWS::ApiGateway::Stage",
        "DependsOn": ["CustomResourceAPIInternals", "v1Deployment"],
        "Properties": {
            "StageName": "v1",
            "Description": {
              "Fn::Join": [" ", [
                {"Ref": "Environment"},
                "Stage"
              ]]
            },
            "RestApiId": {
              "Fn::ImportValue": {
                "Fn::Join": [
                  "-",
                  [
                    {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
                    "api",
                    {"Ref": "Environment"},
                    "RestApiId"
                  ]
                ]
              }
            },
            "DeploymentId": {
                "Ref": "v1Deployment"
            }
        }
    },
    "v1Deployment": {
      "Type": "AWS::ApiGateway::Deployment",
      "DependsOn": ["CustomResourceAPIInternals", "v0Deployment"],
      "Properties": {
        "RestApiId": {
          "Fn::ImportValue": {
            "Fn::Join": [
              "-",
              [
                {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
                "api",
                {"Ref": "Environment"},
                "RestApiId"
              ]
            ]
          }
        },
        "Description": {"Fn::Join": [" ", [
          "v1",
          "Deployment"
        ]]}
      }
    },
    "v1BasePathMapping": {
      "Type" : "AWS::ApiGateway::BasePathMapping",
      "DependsOn": ["CustomResourceAPIInternals"],
      "Properties" : {
        "BasePath" : "v1",
        "DomainName" : {
          "Fn::ImportValue": {
            "Fn::Join": ["-", [
              {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
              "api-custom-domain",
              {"Ref": "Environment"},
              "CustomDomain"
            ]]
          }
        },
        "RestApiId" : {
          "Fn::ImportValue": {
            "Fn::Join": [
              "-",
              [
                {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
                "api",
                {"Ref": "Environment"},
                "RestApiId"
              ]
            ]
          }
        },
        "Stage" : {"Ref": "v1DeploymentStage"}
      }
    }
  }
}
