{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Generates all resources required to clean up/tear down microservice components.",
  "Transform" : ["ProjectLambdaMacro"],
  "Resources": {
    "CodeBuildServiceRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": {
              "Service": "codebuild.amazonaws.com"
            },
            "Action": "sts:AssumeRole"
          }]
        },
        "Policies": [{
          "PolicyName": {
            "Fn::Join": ["-", [
              "code-build",
              {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
              "cleanup",
              "service-policy"
            ]]
          },
          "PolicyDocument": {
            "Version": "2012-10-17",
            "Statement": [{
              "Effect": "Allow",
              "Action": "*",
              "Resource": "*"
            }]
          }
        }]
      }
    },
    "CodeBuildSecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": {
          "Fn::Join": ["-", [
            {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
            "CodeBuild",
            "Microservice",
            "Cleanup",
            "SG"
          ]]
        },
        "GroupDescription": {
          "Fn::Join": ["-", [
            {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
            "CodeBuild",
            "Microservice",
            "Cleanup",
            "SG"
          ]]
        },
        "VpcId": {
          "Fn::ImportValue": {
            "Fn::Join": ["-", [
              "dev",
              "vpc",
              "VPC"
            ]]
          }
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {"Fn::Join": ["-", [
              {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
              "codebuild",
              "sg"
            ]]}
          }
        ]
      }
    },
    "CodeBuildDestroyMicroservice": {
      "Type": "AWS::CodeBuild::Project",
      "Properties": {
        "VpcConfig": {
          "SecurityGroupIds": [
            {"Ref": "CodeBuildSecurityGroup"}
          ],
          "Subnets": [
            {"Fn::ImportValue": {
              "Fn::Join": ["-", [
                "dev",
                "vpc",
                "PrivateSubnetAZ1"
              ]]
            }},
            {"Fn::ImportValue": {
              "Fn::Join": ["-", [
                "dev",
                "vpc",
                "PrivateSubnetAZ2"
              ]]
            }}
          ],
          "VpcId":  {
            "Fn::ImportValue": {
              "Fn::Join": ["-", [
                "dev",
                "vpc",
                "VPC"
              ]]
            }
          }
        },
        "Artifacts": {
          "Type": "NO_ARTIFACTS"
        },
        "Description": "Destroys all microservice CloudFormation stacks.",
        "Environment": {
          "ComputeType": "BUILD_GENERAL1_LARGE",
          "EnvironmentVariables": [
            {
              "Name" : "AWS_ACCOUNT_ID",
              "Type" : "PLAINTEXT",
              "Value" : {"Ref": "AWS::AccountId"}
            },
            {
              "Name" : "ORGANIZATION_NAME",
              "Type" : "PLAINTEXT",
              "Value" : {"PhoenixSSM": "/microservice/{ProjectName}/global/organization-name"}
            },
            {
              "Name" : "PROJECT_NAME",
              "Type" : "PLAINTEXT",
              "Value" : {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"}
            },
            {
              "Name" : "DOMAIN",
              "Type" : "PLAINTEXT",
              "Value" : {"PhoenixSSM": "/microservice/{ProjectName}/global/domain"}
            }
          ],
          "Image": {"PhoenixSSM": "/microservice/{ProjectName}/global/code-build-docker-image"},
          "PrivilegedMode": "true",
          "Type": "LINUX_CONTAINER"
        },
        "Name": {
          "Fn::Join": ["-", [
            "destroy",
            {"PhoenixSSM": "/microservice/{ProjectName}/global/project-name"},
            "microservice"
          ]]
        },
        "ServiceRole": {"Ref": "CodeBuildServiceRole"},
        "Source": {
          "BuildSpec": "Phoenix/buildspec-destroy-microservice.yml",
          "Type": "CODECOMMIT",
          "Location": {
            "Fn::Join": ["", [
              "https://git-codecommit.",
              {"Ref": "AWS::Region"},
              ".amazonaws.com/v1/repos/",
              {"PhoenixSSM": "/microservice/{ProjectName}/global/git-repo-name"}
            ]]
          }
        },
        "TimeoutInMinutes": 120,
        "Tags": []
      }
    }
  }
}
