{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Deploys an API (RESTful or not)",
  "Transform" : ["ProjectLambdaMacro"],
  "Parameters": {
    "Environment": {
      "Description": "The environment (dev, testing, prod, etc.) to deploy to.",
      "Type": "String"
    },
    "URLPrefixOverride": {
      "Description": "The URL prefix to override the environment prefix with. Works only for non-production environments.",
      "Type": "String",
      "Default": ""
    }
  },
  "Conditions": {
    "IsProd" : {"Fn::Equals" : [
      {"Ref" : "Environment"},
      "prod"
    ]},
    "HasURLPrefixOverride" : {"Fn::Not": [
      {"Fn::Equals" : [
        {"Ref" : "URLPrefixOverride"}, ""
      ]}
    ]}
  },
  "Resources": {
    "CustomDomain": {
      "Type": "AWS::ApiGateway::DomainName",
      "Properties": {
        "CertificateArn": "PHX_MACRO_SSL_CERTIFICATE_ARN",
        "DomainName": {"Fn::Join": ["", [
          { "Fn::If": [
            "IsProd",
            "",
            {
              "Fn::If": [
                "HasURLPrefixOverride",
                {"Fn::Join": ["", [ {"Ref": "URLPrefixOverride"}, "." ]] },
                {"Fn::Join": ["", [ {"Ref": "Environment"}, "." ]] }
              ]
            }
          ]},
          "PHX_MACRO_DOMAIN"
        ]]}
      }
    },
    "DnsRecordSetGroup": {
      "Type": "AWS::Route53::RecordSetGroup",
      "DependsOn": ["CustomDomain"],
      "Properties": {
        "HostedZoneId": "PHX_MACRO_HOSTED_ZONE_ID",
        "RecordSets": [
          {
            "Name": {"Fn::Join": ["", [
              { "Fn::If": [
                "IsProd",
                "",
                {
                  "Fn::If": [
                    "HasURLPrefixOverride",
                    {"Fn::Join": ["", [ {"Ref": "URLPrefixOverride"}, "." ]] },
                    {"Fn::Join": ["", [ {"Ref": "Environment"}, "." ]] }
                  ]
                }
              ]},
              "PHX_MACRO_DOMAIN"
            ]]},
            "AliasTarget" : {
                "HostedZoneId" : "Z2FDTNDATAQYW2",
                "DNSName" : { "Fn::GetAtt": ["CustomDomain", "DistributionDomainName"] }
            },
            "Type" : "A"
          }
        ]
      }
    }
  },
  "Outputs": {
    "CustomDomain": {
      "Export": {
        "Name": {
          "Fn::Join": ["-", [
            "PHX_MACRO_PROJECT_NAME",
            "api-custom-domain",
            {"Ref": "Environment"},
            "CustomDomain"
          ]]
        }
      },
      "Value": {
        "Ref": "CustomDomain"
      }
    }
  }
}
