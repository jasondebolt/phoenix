{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Deploys AWS resources required to support versioned API documentation. Resources include a static S3 website/bucket, Bucket policy, CloudFront distribution, Web Application Firewall ACL, WAF rules, and WAF predicates for managing API documentation access.",
  "Transform" : ["ProjectLambdaMacro"],
  "Parameters": {
    "APIDocsUserAgent": {
      "Description": "The user agent used for API Documentation access",
      "Type": "AWS::SSM::Parameter::Value<String>",
      "Default": "/global/api-docs-user-agent"
    },
    "Environment": {
      "Description": "The environment associated with this API documentation.",
      "Type": "String"
    },
    "DomainPrefix": {
      "Description": "The prefix name for the bucket (i.e some.prefix.{PROJECT_DOMAIN}).",
      "Type": "String"
    }
  },
  "Resources": {
    "Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [".", [{
              "Ref": "DomainPrefix"
            },
            "PHX_MACRO_DOMAIN"
          ]]
        },
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html"
        }
      }
    },
    "BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "DependsOn": "CloudFrontOriginAccessIdentity",
      "Properties": {
        "Bucket": {
          "Ref": "Bucket"
        },
        "PolicyDocument": {
          "Statement": [
            {
              "Action": ["s3:GetObject"],
              "Effect": "Allow",
              "Principal":{
                "CanonicalUser": {"Fn::GetAtt": ["CloudFrontOriginAccessIdentity", "S3CanonicalUserId"]}
              },
              "Resource": {
                "Fn::Join": ["", [
                  "arn:aws:s3:::",
                  {
                    "Ref": "Bucket"
                  },
                  "/*"
                ]]
              }
            }
          ]
        }
      }
    },
    "CloudFrontOriginAccessIdentity": {
      "Type": "AWS::CloudFront::CloudFrontOriginAccessIdentity",
      "Properties": {
        "CloudFrontOriginAccessIdentityConfig": {
          "Comment": {
            "Fn::Join": ["-", [
              { "Ref": "DomainPrefix" },
              "PHX_MACRO_DOMAIN"
            ]]
          }
        }
      }
    },
    "CloudFrontDistribution": {
      "Type": "AWS::CloudFront::Distribution",
      "DependsOn": [
        "Bucket", "BucketPolicy", "CloudFrontOriginAccessIdentity",
        "WebApplicationFirewallACL", "WebApplicationFirewallUserAgentRule",
        "WebApplicationFirewallIPWhitelistRule", "UserAgentAccessTokenMatchPredicate",
        "IPWhitelistPredicate"],
      "Properties": {
        "DistributionConfig": {
          "Aliases": [{
            "Fn::Join": [".", [
              { "Ref": "DomainPrefix" },
              "PHX_MACRO_DOMAIN"
            ]]
          }],
          "DefaultRootObject": "index.html",
          "Origins": [
            {
              "Id": {
                "Fn::Join": [".", [
                  { "Ref": "DomainPrefix" },
                  "PHX_MACRO_DOMAIN",
                  "s3.amazonaws.com"
                ]]
              },
              "DomainName": {
                "Fn::Join": [".", [
                  { "Ref": "DomainPrefix" },
                  "PHX_MACRO_DOMAIN",
                  "s3.amazonaws.com"
                ]]
              },
              "OriginPath": "",
              "S3OriginConfig": {
                "OriginAccessIdentity": {
                  "Fn::Join": ["", [
                    "origin-access-identity/cloudfront/",
                    {
                      "Ref": "CloudFrontOriginAccessIdentity"
                    }
                  ]]
                }
              }
            }
          ],
          "DefaultCacheBehavior": {
            "TargetOriginId": {
              "Fn::Join": [".", [
                { "Ref": "DomainPrefix" },
                "PHX_MACRO_DOMAIN",
                "s3.amazonaws.com"
              ]]
            },
            "ForwardedValues": {
              "QueryString": false
            },
            "ViewerProtocolPolicy": "redirect-to-https",
            "MinTTL": 0,
            "DefaultTTL": 0,
            "MaxTTL": 0,
            "AllowedMethods": [
              "HEAD",
              "GET"
            ],
            "Compress": true,
            "CachedMethods": [
              "HEAD",
              "GET"
            ]
          },
          "PriceClass": "PriceClass_All",
          "Enabled": true,
          "ViewerCertificate": {
            "AcmCertificateArn": "PHX_MACRO_SSL_CERTIFICATE_ARN_API_DOCS",
            "SslSupportMethod": "sni-only",
            "MinimumProtocolVersion": "TLSv1.1_2016"
          },
          "WebACLId": {"Ref": "WebApplicationFirewallACL"},
          "HttpVersion": "http2",
          "IPV6Enabled": true
        },
        "Tags": [{
          "Key": "Name",
          "Value": {
            "Fn::Join": [".", [
              { "Ref": "DomainPrefix" },
              "PHX_MACRO_DOMAIN"
            ]]
          }
        }]
      }
    },
    "WebApplicationFirewallACL": {
      "Type" : "AWS::WAF::WebACL",
      "Properties" : {
        "Name": {"Fn::Join": ["",
          {"Fn::Split" : [ "-", {"Ref": "AWS::StackName"} ]}
        ]},
        "MetricName": {"Fn::Join": ["",
          {"Fn::Split" : [ "-", {"Ref": "AWS::StackName"} ]}
        ]},
        "DefaultAction": {
          "Type": "BLOCK"
        },
        "Rules": [
          {
            "Priority": 1,
            "RuleId": {"Ref": "WebApplicationFirewallIPWhitelistRule"},
            "Action": {
              "Type": "ALLOW"
            }
          },
          {
            "Priority": 2,
            "RuleId": {"Ref": "WebApplicationFirewallUserAgentRule"},
            "Action": {
              "Type": "ALLOW"
            }
          }
        ]
      }
    },
    "WebApplicationFirewallUserAgentRule": {
      "Type" : "AWS::WAF::Rule",
      "Properties" : {
        "Name": {"Fn::Join": ["", [
          {"Fn::Join": ["", {"Fn::Split" : [ "-", {"Ref": "AWS::StackName"} ]}]},
          "useragent"
        ]]},
        "MetricName": {"Fn::Join": ["", [
          {"Fn::Join": ["", {"Fn::Split" : [ "-", {"Ref": "AWS::StackName"} ]}]},
          "useragent"
        ]]},
        "Predicates": [
          {
            "Negated": false,
            "Type": "ByteMatch",
            "DataId": {"Ref": "UserAgentAccessTokenMatchPredicate"}
          }
        ]
      }
    },
    "UserAgentAccessTokenMatchPredicate": {
      "Type" : "AWS::WAF::ByteMatchSet",
      "Properties" : {
        "ByteMatchTuples" : [
          {
            "FieldToMatch": {
              "Type": "HEADER",
              "Data": "user-agent"
            },
            "TargetString": {"Ref": "APIDocsUserAgent"},
            "TextTransformation": "NONE",
            "PositionalConstraint": "EXACTLY"
          }
        ],
        "Name": {
          "Fn::Join": ["-", [
            { "Ref": "DomainPrefix" },
            "PHX_MACRO_DOMAIN",
            "user-agent"
          ]]
        }
      }
    },
    "WebApplicationFirewallIPWhitelistRule": {
      "Type" : "AWS::WAF::Rule",
      "Properties" : {
        "Name": {"Fn::Join": ["", [
          {"Fn::Join": ["", {"Fn::Split" : [ "-", {"Ref": "AWS::StackName"} ]}]},
          "ipwhitelist"
        ]]},
        "MetricName": {"Fn::Join": ["", [
          {"Fn::Join": ["", {"Fn::Split" : [ "-", {"Ref": "AWS::StackName"} ]}]},
          "ipwhitelist"
        ]]},
        "Predicates": [
          {
            "Negated": false,
            "Type": "IPMatch",
            "DataId": {"Ref": "IPWhitelistPredicate"}
          }
        ]
      }
    },
    "IPWhitelistPredicate": {
      "Type" : "AWS::WAF::IPSet",
      "Properties" : {
        "IPSetDescriptors" : [
          {
            "Type" : "IPV4",
            "Value" : "4.7.21.202/32"
          },
          {
            "Type" : "IPV4",
            "Value" : "34.201.70.46/32"
          },
          {
            "Type" : "IPV4",
            "Value" : "54.175.38.99/32"
          },
          {
            "Type" : "IPV4",
            "Value" : "64.201.255.58/32"
          },
          {
            "Type" : "IPV4",
            "Value" : "52.21.207.245/32"
          },
          {
            "Type" : "IPV4",
            "Value" : "174.129.69.222/32"
          }
        ],
        "Name": {
          "Fn::Join": ["-", [
            { "Ref": "DomainPrefix" },
            "PHX_MACRO_DOMAIN",
            "ip-whitelist"
          ]]
        }
      }
    },
    "DnsRecordSetGroup": {
      "Type" : "AWS::Route53::RecordSetGroup",
      "DependsOn": "CloudFrontDistribution",
      "Properties" : {
        "HostedZoneId": "PHX_MACRO_HOSTED_ZONE_ID",
        "RecordSets" : [
          {
            "Name": {
              "Fn::Join": [".", [
                {"Ref": "DomainPrefix"},
                "PHX_MACRO_DOMAIN"
              ]]
            },
            "Type" : "A",
            "AliasTarget" : {
              "HostedZoneId" : "Z2FDTNDATAQYW2",
              "DNSName" : {
                "Fn::GetAtt": ["CloudFrontDistribution", "DomainName"]
              }
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "APIDocURL" : {
      "Description" : "The URL API Documentation",
      "Value": {
        "Fn::Join": ["", [
          "https://",
          {"Ref": "DomainPrefix"},
          ".",
          "PHX_MACRO_DOMAIN"
        ]]
      }
    }
  }
}
